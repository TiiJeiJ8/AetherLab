{"ast":null,"code":"import { ref } from 'vue';\nimport { RouterLink } from 'vue-router';\nexport default {\n  __name: 'TopBar',\n  props: {\n    actions: {\n      type: Array,\n      default: () => [{\n        type: 'button',\n        label: 'Home',\n        to: '/',\n        external: false\n      }, {\n        type: 'dropdown',\n        label: 'More',\n        options: [{\n          label: 'Profile',\n          to: '/profile'\n        }, {\n          label: 'GitHub',\n          to: 'https://github.com',\n          external: true\n        }, {\n          label: 'Logout',\n          onClick: () => alert('Logged out')\n        }]\n      }]\n    }\n  },\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n\n    /* eslint-disable */\n    const props = __props;\n    const dropdownOpen = ref(null);\n    const openDropdown = index => dropdownOpen.value = index;\n    const closeDropdown = index => {\n      if (dropdownOpen.value === index) dropdownOpen.value = null;\n    };\n    const __returned__ = {\n      props,\n      dropdownOpen,\n      openDropdown,\n      closeDropdown,\n      ref,\n      get RouterLink() {\n        return RouterLink;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","RouterLink","props","__props","dropdownOpen","openDropdown","index","value","closeDropdown"],"sources":["D:/Learning Material/Git/Fuck-Charts/newArchitecture/frontend_vue_design/src/components/TopBar.vue"],"sourcesContent":["<template>\n    <header class=\"top-bar\">\n        <nav class=\"nav-container\">\n        <div class=\"logo dynamic-gradient-text\">Fuck Charts</div>\n        <div class=\"nav-actions\">\n            <template v-for=\"(item, idx) in actions\" :key=\"idx\">\n            <!-- 普通按钮 -->\n            <button\n                v-if=\"item.type === 'button' && !item.to\"\n                class=\"nav-btn\"\n                @click=\"item.onClick\"\n            >\n                {{ item.label }}\n            </button>\n            <!-- 内部路由跳转 -->\n            <RouterLink\n                v-else-if=\"item.type === 'button' && item.to && !item.external\"\n                :to=\"item.to\"\n                class=\"nav-btn router-link\"\n            >\n                {{ item.label }}\n            </RouterLink>\n            <!-- 外部链接跳转 -->\n            <a\n                v-else-if=\"item.type === 'button' && item.to && item.external\"\n                :href=\"item.to\"\n                class=\"nav-btn external-link\"\n                target=\"_blank\"\n                rel=\"noopener noreferrer\"\n            >\n                {{ item.label }}\n            </a>\n            <!-- 下拉菜单 -->\n            <div\n                v-else-if=\"item.type === 'dropdown'\"\n                class=\"dropdown\"\n                @mouseleave=\"closeDropdown(idx)\"\n            >\n                <button class=\"nav-btn\" @mouseenter=\"openDropdown(idx)\">\n                {{ item.label }} <span class=\"arrow\">▼</span>\n                </button>\n                <ul v-show=\"dropdownOpen === idx\" class=\"dropdown-menu\">\n                <li\n                    v-for=\"(option, i) in item.options\"\n                    :key=\"i\"\n                    class=\"dropdown-item\"\n                >\n                    <!-- 下拉菜单内部跳转或点击 -->\n                    <RouterLink\n                    v-if=\"option.to && !option.external\"\n                    :to=\"option.to\"\n                    class=\"dropdown-link\"\n                    >\n                    {{ option.label }}\n                    </RouterLink>\n                    <a\n                    v-else-if=\"option.to && option.external\"\n                    :href=\"option.to\"\n                    class=\"dropdown-link\"\n                    target=\"_blank\"\n                    rel=\"noopener noreferrer\"\n                    >\n                    {{ option.label }}\n                    </a>\n                    <span\n                    v-else\n                    @click=\"option.onClick\"\n                    style=\"cursor: pointer\"\n                    >\n                    {{ option.label }}\n                    </span>\n                </li>\n                </ul>\n            </div>\n            </template>\n        </div>\n        </nav>\n    </header>\n    </template>\n    \n    <script setup>\n    /* eslint-disable */\n    import { ref } from 'vue'\n    import { RouterLink } from 'vue-router'\n    \n    const props = defineProps({\n    actions: {\n        type: Array,\n        default: () => [\n        { type: 'button', label: 'Home', to: '/', external: false },\n        {\n            type: 'dropdown',\n            label: 'More',\n            options: [\n            { label: 'Profile', to: '/profile' },\n            { label: 'GitHub', to: 'https://github.com', external: true },\n            { label: 'Logout', onClick: () => alert('Logged out') },\n            ],\n        },\n        ],\n    },\n    })\n    \n    const dropdownOpen = ref(null)\n    const openDropdown = index => (dropdownOpen.value = index)\n    const closeDropdown = index => {\n    if (dropdownOpen.value === index) dropdownOpen.value = null\n    }\n    </script>\n    \n    <style scoped>\n    /* 顶部导航栏 */\n    .top-bar {\n        position: fixed;\n        top: 2%;\n        left: 50%;\n        transform: translateX(-50%);\n        background-color: rgba(255, 255, 255, 0.8); /* 添加具体背景色 */\n        backdrop-filter: saturate(180%) blur(10px);\n        border-radius: 12px;\n        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);\n        padding: 0 20px;\n        z-index: 9999;\n        width: 90%;\n        max-width: 900px;\n        height: 50px;\n        display: flex;\n        align-items: center;\n    }\n    \n    /* 导航内容容器 */\n    .nav-container {\n        width: 100%;\n        display: flex;\n        justify-content: space-between;\n        align-items: center;\n    }\n    \n    /* LOGO动态渐变文字 */\n    .dynamic-gradient-text {\n        font-weight: 900;\n        font-size: 2.1rem;\n        background: linear-gradient(\n        270deg,\n        #ff416c,\n        #ff4b2b,\n        #1fa2ff,\n        #12d8fa,\n        #a6ffcb,\n        #ff416c\n        );\n        background-size: 1200% 1200%;\n        -webkit-background-clip: text;\n        background-clip: text;\n        -webkit-text-fill-color: transparent;\n        animation: gradientMove 15s ease infinite;\n        user-select: none;\n    }\n    \n    /* 动态渐变动画 */\n    @keyframes gradientMove {\n        0% {\n            background-position: 0% 50%;\n        }\n        50% {\n            background-position: 100% 50%;\n        }\n        100% {\n            background-position: 0% 50%;\n        }\n    }\n    \n    /* 按钮样式 */\n    .nav-btn {\n        background: transparent;\n        border: none;\n        font-size: 1rem;\n        font-weight: 600;\n        cursor: pointer;\n        color: #333; /* 添加具体文字颜色 */\n        padding: 6px 14px;\n        border-radius: 8px;\n        transition: background-color 0.3s ease;\n    }\n    \n    /* 悬停效果 */\n    .nav-btn:hover {\n        background-color: rgba(0, 0, 0, 0.1);\n    }\n    \n    /* 下拉菜单 */\n    .dropdown {\n        position: relative;\n        display: inline-block;\n    }\n    \n    .arrow {\n        font-size: 0.6rem;\n        margin-left: 6px;\n    }\n    \n    /* 下拉菜单列表 */\n    .dropdown-menu {\n        position: absolute;\n        top: 110%;\n        left: 0;\n        background: white;\n        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);\n        border-radius: 8px;\n        min-width: 120px;\n        z-index: 10;\n        padding: 6px 0;\n        user-select: none;\n        \n        /* 初始隐藏 */\n        display: none;\n    }\n    \n    /* 下拉菜单显示状态 */\n    .dropdown-menu[style*=\"display: block\"] {\n        display: block !important;\n    }\n    \n    .dropdown-item {\n        padding: 8px 16px;\n        cursor: pointer;\n        white-space: nowrap;\n        transition: background-color 0.2s ease;\n    }\n    \n    .dropdown-item:hover {\n        background-color: #f2f2f2;\n    }\n    \n    /* 响应式设计 */\n    /* 手机端缩小按钮 */\n    @media (max-width: 600px) {\n        .top-bar {\n            width: 95%;\n            height: 44px;\n            padding: 0 12px;\n        }\n        .dynamic-gradient-text {\n            font-size: 1.1rem;\n        }\n        .nav-btn {\n            font-size: 0.9rem;\n            padding: 5px 10px;\n        }\n        .dropdown-menu {\n            min-width: 100px;\n        }\n    }\n    </style>"],"mappings":"AAkFI,SAASA,GAAG,QAAQ,KAAI;AACxB,SAASC,UAAU,QAAQ,YAAW;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;IAFtC;IAIA,MAAMC,KAAK,GAAGC,OAAA;IAkBd,MAAMC,YAAY,GAAGJ,GAAG,CAAC,IAAI;IAC7B,MAAMK,YAAY,GAAGC,KAAK,IAAKF,YAAY,CAACG,KAAK,GAAGD,KAAK;IACzD,MAAME,aAAa,GAAGF,KAAK,IAAI;MAC/B,IAAIF,YAAY,CAACG,KAAK,KAAKD,KAAK,EAAEF,YAAY,CAACG,KAAK,GAAG,IAAG;IAC1D","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}